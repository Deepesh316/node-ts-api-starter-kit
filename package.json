  "bugs": {
    "url": "https://github.com/Deepesh316/node-ts-api-starter-kit/issues"
  },
  "homepage": "https://github.com/Deepesh316/node-ts-api-starter-kit#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.8.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
