{
  "name": "api-starter-kit",
  "version": "1.0.0",
  "description": "A starter template for TypeScript and Node",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "dev": "nodemon src/server.ts",
